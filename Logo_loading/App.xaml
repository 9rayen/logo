<Application x:Class="Logo_loading.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Logo_loading"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Import UI styles from organized location -->
                <ResourceDictionary Source="Styles/UIStyles.xaml"/>
                
                <!-- Import animation storyboards -->
                <ResourceDictionary Source="Animations/AnimationStoryboards.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
