<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Gradient brush for the waveform with fade at beginning and end -->
    <LinearGradientBrush x:Key="WaveformGradientBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="Transparent" Offset="0"/>
        <GradientStop Color="#49bae3" Offset="0.15"/>
        <GradientStop Color="#3941d4" Offset="0.55"/>
        <GradientStop Color="#7623db" Offset="0.7"/>
        <GradientStop Color="#7623db" Offset="0.85"/>
        <GradientStop Color="Transparent" Offset="1"/>
    </LinearGradientBrush>

    <!-- Style for the main logo container -->
    <Style x:Key="LogoContainerStyle" TargetType="Canvas">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Style for the Loading Panel text -->
    <Style x:Key="LoadingTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="#333333"/>
    </Style>

    <!-- Style for the animated "L" -->
    <Style x:Key="AnimatedLStyle" TargetType="Run">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground">
            <Setter.Value>
                <SolidColorBrush Color="#FF606060"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Style for loading dots -->
    <Style x:Key="LoadingDotStyle" TargetType="Run">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#333333"/>
    </Style>

    <!-- Blue waveform path style with gradient -->
    <Style x:Key="WaveformStyle" TargetType="Path">
        <Setter Property="Stroke" Value="{StaticResource WaveformGradientBrush}"/>
        <Setter Property="StrokeThickness" Value="7"/>
        <Setter Property="Fill" Value="Transparent"/>
        <Setter Property="StrokeLineJoin" Value="Round"/>
        <Setter Property="StrokeStartLineCap" Value="Round"/>
        <Setter Property="StrokeEndLineCap" Value="Round"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>

</ResourceDictionary>