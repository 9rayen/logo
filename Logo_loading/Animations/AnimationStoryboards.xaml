<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- =============================================== -->
    <!-- LOADING DOTS ANIMATION STORYBOARD -->
    <!-- Fixed timing - simple dots animation -->
    <!-- =============================================== -->

    <Storyboard x:Key="LoadingDotsAnimation" RepeatBehavior="Forever" Duration="0:0:6.0">
        <!-- First dot -->
        <DoubleAnimation Storyboard.TargetName="Dot1"
                       Storyboard.TargetProperty="Opacity"
                       From="0" To="1" Duration="0:0:0.3"
                       BeginTime="0:0:4.0"/>
        <DoubleAnimation Storyboard.TargetName="Dot1"
                       Storyboard.TargetProperty="Opacity"
                       From="1" To="0" Duration="0:0:0.3"
                       BeginTime="0:0:4.7"/>

        <!-- Second dot -->
        <DoubleAnimation Storyboard.TargetName="Dot2"
                       Storyboard.TargetProperty="Opacity"
                       From="0" To="1" Duration="0:0:0.3"
                       BeginTime="0:0:4.3"/>
        <DoubleAnimation Storyboard.TargetName="Dot2"
                       Storyboard.TargetProperty="Opacity"
                       From="1" To="0" Duration="0:0:0.3"
                       BeginTime="0:0:5.0"/>

        <!-- Third dot -->
        <DoubleAnimation Storyboard.TargetName="Dot3"
                       Storyboard.TargetProperty="Opacity"
                       From="0" To="1" Duration="0:0:0.3"
                       BeginTime="0:0:4.6"/>
        <DoubleAnimation Storyboard.TargetName="Dot3"
                       Storyboard.TargetProperty="Opacity"
                       From="1" To="0" Duration="0:0:0.3"
                       BeginTime="0:0:5.3"/>
    </Storyboard>

    <!-- =============================================== -->
    <!-- INDEPENDENT LOADING DOTS ANIMATION STORYBOARD -->
    <!-- Independent timing - runs on its own 2-second cycle -->
    <!-- =============================================== -->

    <Storyboard x:Key="IndependentLoadingDotsAnimation" RepeatBehavior="Forever" Duration="0:0:2.0">
        <!-- First dot - Independent timing -->
        <DoubleAnimation Storyboard.TargetName="Dot1"
                       Storyboard.TargetProperty="Opacity"
                       From="0" To="1" Duration="0:0:0.2"
                       BeginTime="0:0:0.1"/>
        <DoubleAnimation Storyboard.TargetName="Dot1"
                       Storyboard.TargetProperty="Opacity"
                       From="1" To="0" Duration="0:0:0.2"
                       BeginTime="0:0:1.2"/>

        <!-- Second dot - Independent timing -->
        <DoubleAnimation Storyboard.TargetName="Dot2"
                       Storyboard.TargetProperty="Opacity"
                       From="0" To="1" Duration="0:0:0.2"
                       BeginTime="0:0:0.4"/>
        <DoubleAnimation Storyboard.TargetName="Dot2"
                       Storyboard.TargetProperty="Opacity"
                       From="1" To="0" Duration="0:0:0.2"
                       BeginTime="0:0:1.5"/>

        <!-- Third dot - Independent timing -->
        <DoubleAnimation Storyboard.TargetName="Dot3"
                       Storyboard.TargetProperty="Opacity"
                       From="0" To="1" Duration="0:0:0.2"
                       BeginTime="0:0:0.7"/>
        <DoubleAnimation Storyboard.TargetName="Dot3"
                       Storyboard.TargetProperty="Opacity"
                       From="1" To="0" Duration="0:0:0.2"
                       BeginTime="0:0:1.8"/>
    </Storyboard>

    <!-- =============================================== -->
    <!-- TUNNEL WAVE ANIMATION STORYBOARD -->
    <!-- Fixed timing wave animation -->
    <!-- =============================================== -->

    <Storyboard x:Key="ColorWaveAnimation" RepeatBehavior="Forever" Duration="0:0:6.0">
        <!-- Wave animations -->
        <DoubleAnimation Storyboard.TargetName="PulseStart"
                       Storyboard.TargetProperty="Offset"
                       From="-0.3" To="1.3" Duration="0:0:6.0"/>
        <DoubleAnimation Storyboard.TargetName="PulseLeading"
                       Storyboard.TargetProperty="Offset"
                       From="-0.25" To="1.35" Duration="0:0:6.0"/>
        <DoubleAnimation Storyboard.TargetName="PulseCenter"
                       Storyboard.TargetProperty="Offset"
                       From="-0.2" To="1.4" Duration="0:0:6.0"/>
        <DoubleAnimation Storyboard.TargetName="PulseTrailing"
                       Storyboard.TargetProperty="Offset"
                       From="-0.15" To="1.45" Duration="0:0:6.0"/>
        <DoubleAnimation Storyboard.TargetName="PulseEnd"
                       Storyboard.TargetProperty="Offset"
                       From="-0.1" To="1.5" Duration="0:0:6.0"/>
    </Storyboard>

</ResourceDictionary>
